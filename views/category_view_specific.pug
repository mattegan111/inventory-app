extends layout 

block content
  h1= title 

  ol 
    li 
      a(href= '/categories')
        p Categories
    each parent in data.category.parent_categories 
      li
        a(href=`/categories/${parent._id}`)
          p #{parent.name}
    li 
      a(href= `/categories/${data.category._id}`)
        p #{data.category.name}
  
  h2= 'Categories'
  table(style='width:100%', border='1')
    tr
      th Id 
      th Name 

    each category in data.category.child_categories 
      tr
        td 
          a(href="#{category._id}")
            p #{category._id} 
        td 
          a(href=`/categories/${category._id}`)
            p #{category.name} 

  h2= 'Products'
  table(style='width:100%', border='1')
    tr 
      th Id 
      th Name 
      th Manufacturer 
    each product in data.products 
      tr 
        td 
          p #{product._id}
        td 
          p #{product.name}
        td 
          p #{product.manufacturer}
       
