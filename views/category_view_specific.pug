extends layout 

block content
  h1= title 

  table(style='width:100%', border='1')
    tr
      th Id 
      th Name 

    each category in data.category.child_categories 
      tr
        td 
          a(href="#{category._id}")
            p #{category._id} 
        td 
          a(href=`/categories/${category._id}`)
            p #{category.name} 
  table(style='width:100%', border='1')
    h2= 'Products'
    tr 
      th Id 
      th Name 
      th Manufacturer 
    each product in data.products 
      tr 
        td 
          p #{product._id}
        td 
          p #{product.name}
        td 
          p #{product.manufacturer}
       
